/*Fuentes*/
@font-face
	font-family 'Fjord'
	font-style normal
	font-weight 400
	src url('../fonts/fjord-one.eot')
	src local('OpenSans'), url('../fonts/fjord-one.eot') format('embedded-opentype'), url('../fonts/fjord-one.ttf') format('truetype'), url('../fonts/fjord-one.svg#Fjord-One') format('svg'), url('../fonts/fjord-one.woff') format('woff')

@font-face
	font-family 'roboto_condensedregular'
	src url('../fonts/RobotoCondensed-Regular-webfont.eot')
